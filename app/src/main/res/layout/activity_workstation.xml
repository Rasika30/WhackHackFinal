<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_room_main"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_ws_main"
        android:text="Workstations"
        android:textSize="36sp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/sp_cluster_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ws_main"
        android:prompt="@string/prompt_clusters"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:id="@+id/sp_wing_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_cluster_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:id="@+id/sp_floor_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_wing_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_find_ws"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_floor_spinner"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Find Workstation" />


</RelativeLayout>