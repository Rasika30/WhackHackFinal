<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_home_main"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="HOME"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btn_rooms"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hello"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="Rooms" />

    <Button
        android:id="@+id/btn_work_stations"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Work stations"
        android:layout_below="@+id/btn_rooms"
        android:layout_alignLeft="@+id/btn_rooms"
        android:layout_alignStart="@+id/btn_rooms" />

</RelativeLayout>